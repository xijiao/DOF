<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
	>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/focalBar"
        android:max="81"
        android:progress="0"
        android:indeterminate="false"
        android:layout_above="@+id/textView4"
        android:layout_toLeftOf="@+id/forcalText"
        android:layout_toStartOf="@+id/forcalText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/focal"
        android:layout_above="@+id/focalBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/forcalText"
        android:text="24"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/apertureBar"
        android:layout_toEndOf="@+id/apertureBar" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/apertureBar"
        android:max="81"
        android:progress="0"
        android:indeterminate="false"
        android:layout_above="@+id/textView"
        android:layout_toLeftOf="@+id/apertureText" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aperture:"
        android:id="@+id/textView4"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/apertureBar"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="F/1.4"
        android:id="@+id/apertureText"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/apertureBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/apertureBar" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Distance:"
        android:id="@+id/textView"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_above="@+id/distanceBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="50cm"
        android:id="@+id/distanceText"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/distanceBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/distanceBar"
        android:indeterminate="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/distanceText"
        android:max="10000"
        android:progress="9999" />

	<Spinner
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/sensorSizeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/textView2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/sensor_size"
        android:id="@+id/textView3"
        android:layout_above="@+id/sensorSizeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBarIndicator"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/distanceUnitSpinner"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dropdown"
        android:textAlignment="textEnd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/distance_unit"
        android:id="@+id/textView5"
        android:layout_above="@+id/distanceUnitSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorBarIndicator"/>

	<info.xijiao.dof.DepthView
		android:layout_width="match_parent"
		android:layout_height="120sp"
		android:id="@+id/depthView"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignEnd="@+id/sensorSizeSpinner"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		custom:targetPosition="0.4"
		custom:textSize="20sp"/>

	<info.xijiao.dof.Wheel
		android:layout_width="wrap_content"
		android:layout_height="40sp"
		android:layout_below="@+id/depthView"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginTop="51dp"
		android:id="@+id/distanceWheel"
		custom:nodeWidth="60sp"
		custom:nodeTextSize="25sp"/>
</RelativeLayout>
