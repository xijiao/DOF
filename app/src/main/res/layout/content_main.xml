<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/focalBar"
        android:max="81"
        android:progress="0"
        android:indeterminate="false"
        android:layout_above="@+id/textView4"
        android:layout_toLeftOf="@+id/forcalText"
        android:layout_toStartOf="@+id/forcalText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/focal"
        android:layout_above="@+id/focalBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/forcalText"
        android:text="24"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/apertureBar"
        android:layout_toEndOf="@+id/apertureBar" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/apertureBar"
        android:max="81"
        android:progress="0"
        android:indeterminate="false"
        android:layout_above="@+id/textView"
        android:layout_toLeftOf="@+id/apertureText" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aperture:"
        android:id="@+id/textView4"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/apertureBar"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="F/1.4"
        android:id="@+id/apertureText"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/apertureBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/apertureBar" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Distance:"
        android:id="@+id/textView"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_above="@+id/distanceBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="50cm"
        android:id="@+id/distanceText"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/distanceBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/distanceBar"
        android:indeterminate="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/distanceText"
        android:max="10000"
        android:progress="9999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/dofText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />
</RelativeLayout>
