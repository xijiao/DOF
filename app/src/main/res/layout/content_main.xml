<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
	>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/focal_bar"
        android:max="81"
        android:progress="0"
        android:indeterminate="false"
        android:layout_above="@+id/textView4"
        android:layout_toLeftOf="@+id/forcal_text"
        android:layout_toStartOf="@+id/forcal_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/focal"
        android:layout_above="@+id/focal_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/forcal_text"
        android:text="24"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/aperture_bar"
        android:layout_toEndOf="@+id/aperture_bar" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/aperture_bar"
        android:max="81"
        android:progress="0"
        android:indeterminate="false"
        android:layout_above="@+id/textView"
        android:layout_toLeftOf="@+id/aperture_text" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aperture:"
        android:id="@+id/textView4"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/aperture_bar"
        android:textColor="@color/colorBarIndicator" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="F/1.4"
        android:id="@+id/aperture_text"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_alignTop="@+id/aperture_bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/aperture_bar" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Distance:"
        android:id="@+id/textView"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_above="@+id/distance_wheel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBarIndicator" />

    <TextView
		android:layout_width="80sp"
		android:layout_height="40sp"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="50cm"
		android:id="@+id/distance_text"
		android:textSize="15sp"
		android:textAlignment="center"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/aperture_bar"
		android:layout_above="@+id/distance_wheel"/>

	<info.xijiao.dof.view.Wheel
		android:layout_width="wrap_content"
		android:layout_height="60sp"
		android:id="@+id/distance_wheel"
		custom:nodeWidth="200sp"
		custom:nodeTextSize="20sp"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:clickable="true"
		android:layout_alignParentBottom="true"
		android:layout_alignRight="@+id/aperture_text"
		android:layout_alignEnd="@+id/aperture_text"/>

	<Spinner
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/sensorSizeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/textView2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/sensor_size"
        android:id="@+id/textView3"
        android:layout_above="@+id/sensorSizeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBarIndicator"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/distanceUnitSpinner"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dropdown"
        android:textAlignment="textEnd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/distance_unit"
        android:id="@+id/textView5"
        android:layout_above="@+id/distanceUnitSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorBarIndicator"/>

	<info.xijiao.dof.view.DepthView
		android:layout_width="match_parent"
		android:layout_height="120sp"
		android:id="@+id/depth_view"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignEnd="@+id/sensorSizeSpinner"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		custom:targetPosition="0.4"
		custom:textSize="20sp"/>

</RelativeLayout>
